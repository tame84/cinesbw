{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmitOnError": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@db/*": ["./src/db/*"],
            "@routes/*": ["./src/routes/*"],
            "@handlers/*": ["./src/handlers/*"],
            "@scraping/*": ["./src/scraping/*"],
            "@redis/*": ["./src/redis/*"]
        }
    },
    "include": ["src"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
